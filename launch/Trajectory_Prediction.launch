<launch>
 <arg name = "topic_name" default = "/comparare_position" />
 <group ns = "flyboi">
 	<rosparam file="$(find flyboi_ethz)/resources/sitl_param.yaml" />
 </group>
 <!-- vim: set ft=xml noet : -->
 <group ns="Trajectory_Nodes">
 	<node name = "Trajectory" pkg = "flyboi_ethz" type = "path_python_traj.py" output="screen"/>
	<node name = "Trajectory_Estimation" pkg = "flyboi_ethz" type = "ListenPredict.py" output="screen"/>
 </group>
 <group ns="Record_Data">
	<node name = "Trajectory_Comparison" pkg = "flyboi_ethz" type = "Comparison_Node.py" output="screen"/>
	<node name = "Record_Data" pkg = "rosbag" type = "record" args = "-o $(find flyboi_ethz)/bags/flight $(arg topic_name)" />
 </group>
</launch>
